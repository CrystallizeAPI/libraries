{
    "name": "@crystallize/schema",
    "version": "0.0.4",
    "license": "MIT",
    "type": "module",
    "exports": {
        "./item": {
            "import": "./dist/item/index.js",
            "require": "./dist/item/index.cjs",
            "types": "./dist/item/index.d.ts"
        },
        "./shape": {
            "import": "./dist/shape/index.js",
            "require": "./dist/shape/index.cjs",
            "types": "./dist/shape/index.d.ts"
        },
        "./shared": {
            "import": "./dist/shared/index.js",
            "require": "./dist/shared/index.cjs",
            "types": "./dist/shared/index.d.ts"
        },
        "./tenant": {
            "import": "./dist/tenant/index.js",
            "require": "./dist/tenant/index.cjs",
            "types": "./dist/tenant/index.d.ts"
        },
        "./topic": {
            "import": "./dist/topic/index.js",
            "require": "./dist/topic/index.cjs",
            "types": "./dist/topic/index.d.ts"
        }
    },
    "scripts": {
        "build": "rm -rf dist && tsup src/**/index.ts --format esm,cjs --dts",
        "test": "ava",
        "test:watch": "ava --watch"
    },
    "devDependencies": {
        "@ava/typescript": "^3.0.1",
        "@tsconfig/node18": "^1.0.1",
        "@types/node": "^18.0.6",
        "ava": "^4.3.3",
        "json": "^11.0.0",
        "mongodb": "^4.9.1",
        "ts-node": "^10.9.1",
        "tsup": "^6.6.3",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "zod": "^3.17.9"
    },
    "ava": {
        "extensions": {
            "ts": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ]
    }
}
