{
    "name": "@crystallize/schema",
    "version": "0.0.4",
    "license": "MIT",
    "type": "module",
    "exports": {
        "./item": {
            "import": "./item/index.js",
            "require": "./item/index.cjs",
            "types": "./item/index.d.ts"
        },
        "./shape": {
            "import": "./shape/index.js",
            "require": "./shape/index.cjs",
            "types": "./shape/index.d.ts"
        },
        "./shared": {
            "import": "./shared/index.js",
            "require": "./shared/index.cjs",
            "types": "./shared/index.d.ts"
        },
        "./tenant": {
            "import": "./tenant/index.js",
            "require": "./tenant/index.cjs",
            "types": "./tenant/index.d.ts"
        },
        "./topic": {
            "import": "./topic/index.js",
            "require": "./topic/index.cjs",
            "types": "./topic/index.d.ts"
        }
    },
    "scripts": {
        "build:json": "json -f ./dist/package.json -I -e \"delete this.ava; delete this.devDependencies; delete this.scripts;\"",
        "build:copy-files": "cp package.json ./dist/package.json &&  cp README.md ./dist/README.md && cp LICENSE ./dist/LICENSE",
        "build": "rm -rf dist && tsup src/**/index.ts --format esm,cjs --dts && yarn run build:copy-files && yarn run build:json",
        "build:watch": "yarn tsc -W",
        "test": "ava",
        "test:watch": "ava --watch"
    },
    "devDependencies": {
        "@ava/typescript": "^3.0.1",
        "@tsconfig/node18": "^1.0.1",
        "@types/node": "^18.0.6",
        "ava": "^4.3.3",
        "json": "^11.0.0",
        "mongodb": "^4.9.1",
        "ts-node": "^10.9.1",
        "tsup": "^6.6.3",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "zod": "^3.17.9"
    },
    "ava": {
        "extensions": {
            "ts": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ]
    }
}
