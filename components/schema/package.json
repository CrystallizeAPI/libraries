{
    "name": "@crystallize/schema",
    "version": "0.0.5",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "rm -rf dist && tsup src/index.ts --format esm,cjs --dts",
        "test": "ava",
        "test:watch": "ava --watch"
    },
    "devDependencies": {
        "@ava/typescript": "^3.0.1",
        "@tsconfig/node18": "^1.0.1",
        "@types/node": "^18.0.6",
        "ava": "^4.3.3",
        "json": "^11.0.0",
        "mongodb": "^4.9.1",
        "ts-node": "^10.9.1",
        "tsup": "^6.6.3",
        "typescript": "^4.7.4"
    },
    "peerDependencies": {
        "zod": "3.19.1"
    },
    "ava": {
        "extensions": {
            "ts": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ]
    }
}
