{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": [],
            "env": [
                "CRYSTALLIZE_TENANT_ID",
                "CRYSTALLIZE_TENANT_IDENTIFIER",
                "CRYSTALLIZE_ACCESS_TOKEN_ID",
                "CRYSTALLIZE_ACCESS_TOKEN_SECRET",
                "CRYSTALLIZE_ORIGIN"
            ]
        },
        "watch": {
            "cache": false
        },
        "start": {
            "cache": false
        }
    }
}
